<h1>Lists</h1>
<% if user_signed_in? %>
  <h2>My Lists</h2>
  <% @lists.each do |list| %>
    <% if current_user == list.user %>
      <div>
        <%= link_to list.title, list_path(list) %>
      </div>
    <% end %>
  <% end %>
  <div>
      <%= link_to "+", new_list_path() %>
  </div>
<% end %>

  <h2>Public Lists</h2>
  <% @lists.each do |list| %>
    <% if list.public %>
      <div>
        <%= link_to list.title, list_path(list) %>
      </div>
    <% end %>
  <% end %>

